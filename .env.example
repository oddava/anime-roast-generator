# Anime Roast Generator - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED: Gemini API Configuration
# ============================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini model to use (default: gemini-2.0-flash-lite)
GEMINI_MODEL=gemini-2.0-flash-lite

# ============================================
# CORS Configuration
# ============================================
# URL of your frontend application
FRONTEND_URL=http://localhost:3000

# ============================================
# Rate Limiting Configuration
# ============================================
# Maximum requests per minute per IP (default: 10)
RATE_LIMIT_PER_MINUTE=10

# ============================================
# Logging Configuration
# ============================================
# Enable request logging (default: true)
LOG_REQUESTS=true

# ============================================
# Frontend Configuration
# ============================================
# URL of the backend API (for frontend to connect to)
VITE_API_URL=http://localhost:8000
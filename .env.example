# Anime Roast Generator - Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env files with real secrets to git!

# ============================================
# REQUIRED: Gemini API Configuration
# ============================================
# Get your API key from: https://makersuite.google.com/app/apikey
# SECURITY: Keep this secret and rotate it regularly
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini model to use (default: gemini-2.0-flash-lite)
GEMINI_MODEL=gemini-2.0-flash-lite

# ============================================
# CORS Configuration
# ============================================
# URL of your frontend application
# PRODUCTION: Set this to your actual domain
FRONTEND_URL=http://localhost:3000

# Additional allowed origins (comma-separated)
# Example: https://app.example.com,https://admin.example.com
ADDITIONAL_ORIGINS=

# ============================================
# Rate Limiting Configuration
# ============================================
# Maximum requests per minute per IP (default: 10)
RATE_LIMIT_PER_MINUTE=10

# ============================================
# Redis Configuration
# ============================================
# Redis URL for distributed rate limiting and caching
REDIS_URL=redis://redis:6379/0

# Upstash Redis URL (for Vercel deployment)
UPSTASH_REDIS_URL=

# ============================================
# Logging Configuration
# ============================================
# Enable request logging (default: true)
LOG_REQUESTS=true

# Environment (development/production)
ENVIRONMENT=production

# ============================================
# Security Configuration
# ============================================
# IP Hash Salt - REQUIRED for privacy-compliant rate limiting
# Generate a secure random string (e.g., using: openssl rand -base64 32)
# This salt is used to hash IP addresses for vote/comment tracking
# SECURITY: Keep this secret and never change it once set (would invalidate all existing votes)
IP_HASH_SALT=your_secure_random_salt_here_change_this_in_production

# ============================================
# Frontend Configuration
# ============================================
# URL of the backend API (for frontend to connect to)
VITE_API_URL=http://localhost:8000

# Anime Roast Generator - Production Environment Variables
# Copy this file to .env.prod and fill in your values

# Required: Google Gemini API Key
# Get yours at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Gemini Model (default: gemini-2.0-flash-lite)
GEMINI_MODEL=gemini-2.0-flash-lite

# Frontend URL (for CORS)
FRONTEND_URL=https://anime-roast-generator.duckdns.org

# Rate Limiting (requests per minute per IP)
RATE_LIMIT_PER_MINUTE=10

# Request Logging
LOG_REQUESTS=true

# Optional: Redis for distributed rate limiting
# Leave empty to use in-memory rate limiting
UPSTASH_REDIS_URL=

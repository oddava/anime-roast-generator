# Anime Roast Generator - Production Environment Variables
# Copy this file to .env.prod and fill in your values

# ============================================
# REQUIRED SETTINGS
# ============================================

# Your domain name (e.g., anime-roast-generator.duckdns.org)
DOMAIN=anime-roast-generator.duckdns.org

# Email for Let's Encrypt SSL certificates
ACME_EMAIL=oddava@proton.me

# Google Gemini API Key (required)
# Get yours at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# OPTIONAL SETTINGS
# ============================================

# Gemini Model (default: gemini-2.0-flash-lite)
GEMINI_MODEL=gemini-2.0-flash-lite

# Rate Limiting (requests per minute per IP)
RATE_LIMIT_PER_MINUTE=10

# Request Logging
LOG_REQUESTS=true

# Redis for distributed rate limiting (optional)
# Leave empty to use in-memory rate limiting
UPSTASH_REDIS_URL=
